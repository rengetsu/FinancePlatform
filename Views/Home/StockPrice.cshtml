@page
@model StockPriceModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Stock Price Checker</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Stock Price Checker</h1>
        <form method="post" class="mt-3">
            <div class="form-group">
                <label for="symbol">Enter Stock Symbol:</label>
                <input type="text" class="form-control" id="symbol" name="symbol" required />
            </div>
            <button type="submit" class="btn btn-primary mt-3">Get Stock Price</button>
        </form>

        @if (Model.StockPrice != null)
        {
            <div class="mt-4">
                <h3>Stock Price for @Model.StockPrice.Symbol</h3>
                <p>Price: @Model.StockPrice.Price</p>
                <p>Timestamp: @Model.StockPrice.Timestamp</p>
            </div>
        }
    </div>
</body>
</html>
